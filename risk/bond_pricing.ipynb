   "outputs": [],
   "source": [
    "def bond_price(face, coupon, ytm, maturity):\n",
    "    times = np.arange(1, maturity + 1)\n",
    "    cashflows = np.full(maturity, face * coupon)\n",
    "    cashflows[-1] += face\n",
    "    return np.sum(cashflows / (1 + ytm) ** times)\n"
   ]
